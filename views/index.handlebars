<h1>Eat-Da-Burger Restaurant!</h1>

<div id="burger-container">
  <div class="burger-list">
  <h2>Prepared Burgers!</h2>

  <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{!-- > allows us to take pieces of code that repeats  --}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
  </ul>
</div>

<div class="burger-list">
<h2>Devoured Burgers!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>

</div>

<h2>Add a burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="bu"></label>
    <textarea type="text" id="bu" name="burger_name"></textarea>
  </div>


  <button type="submit">Submit</button>
  
</form>